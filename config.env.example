# Copy this file to config.env and customize values
#   cp config.env.example config.env

# Linux user that runs the frame
PI_USER=pi

# Hostname you gave your Pi (for docs only)
HOSTNAME=digital-frame

# iCloud account + album
ICLOUD_USERNAME="your_apple_id@example.com"
ALBUM_NAME="Frame"

# Where photos will be stored on the Pi
FRAME_DIR="/home/pi/Pictures/frame"

# How often to check iCloud (in seconds)
SYNC_INTERVAL_SECONDS=3600

# Path to icloudpd (usually correct when installed via pip3)
ICLOUDPD_BIN="/usr/local/bin/icloudpd"
